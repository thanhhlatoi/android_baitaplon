<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mua_Hang.Mua_hangActivity"
    android:background="@color/white"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Hình nền của FrameLayout (ImageView đầu tiên) -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/img_group314_teal_800_74x426"/>

        <!-- Hình ảnh thứ hai -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/uaa6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <!-- Hình ảnh giỏ hàng -->
        <ImageView
            android:id="@+id/layout_img_gio"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/back"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"/>

        <!--  (badge) -->
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/img_muasp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/img_suarm"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:id="@+id/txt_gtsp"
                android:layout_marginTop="5dp"
                android:text="serum"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/love_2"/>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/comment_24"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txt_giasp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="300.000d"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Kích Cỡ"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_sp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180ml"/>
            <CheckBox
                android:id="@+id/cb_sp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="180ml"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Mô tả sản phẩm"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <LinearLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/img_group314_teal_800_74x426"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_tru"
                android:layout_marginTop="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/truuu"/>
            <TextView
                android:id="@+id/txt_sl"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginTop="-2dp"
                android:layout_marginLeft="20dp"
                android:text="1"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/img_add"
                android:layout_marginTop="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/adddd"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_them_gio_hang"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/bt_hong"
                android:text="Thêm vào giỏ hàng"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>