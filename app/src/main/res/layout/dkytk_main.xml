<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/img">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img_image51"
            android:layout_marginBottom="40dp"/>
        <EditText
            android:id="@+id/text_dky_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nhập tên đăng nhập"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginBottom="15dp"
            android:ems="15"/>
        <EditText
            android:id="@+id/text_dky_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nhập mật khẩu"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginBottom="15dp"
            android:ems="15"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginBottom="15dp"
            android:ems="15"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Họ Và Tên"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginBottom="15dp"
            android:ems="15"/>
        <EditText
            android:id="@+id/text_dky_SDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Số Điện Thoại"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginBottom="15dp"
            android:ems="15"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginBottom="15dp"
            android:ems="15"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dky_dangnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:background="@drawable/img_rectangle126_pink_a100"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:text="Đăng Ký " />
    </LinearLayout>

</RelativeLayout>