<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/img"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/img_image51" />

        <EditText
            android:id="@+id/text_dky_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="15"
            android:hint="Nhập tên đăng nhập"
            android:textColor="#000"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/text_dky_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="15"
            android:hint="Nhập mật khẩu"
            android:textColor="#000"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/text_dky_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="15"
            android:hint="Nhập tên "
            android:textColor="#000"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/text_dky_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="15"
            android:hint="Nhập ngay sinh"
            android:textColor="#000"
            android:textSize="15dp" />



        <EditText
            android:id="@+id/text_dky_SDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="15"
            android:hint="Số Điện Thoại"
            android:textColor="#000"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/text_dky_pq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="15"
            android:hint="Email"
            android:textColor="#000"
            android:textSize="15dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dky_dangnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_rectangle126_pink_a100"
            android:ems="15"
            android:text="Đăng Ký "
            android:textAllCaps="false"
            android:textColor="@color/black" />
    </LinearLayout>

</RelativeLayout>