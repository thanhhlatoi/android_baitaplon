<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/img_group314_teal_800_74x426">

                <FrameLayout
                    android:id="@+id/frameStackgroup314"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageButton
                        android:id="@+id/imageArrowleft"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/img_group314_teal_800_74x426"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/uaa6"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/uaa6"/>
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="Tìm kiếm"
                        android:textSize="20dp" />
                    <ImageButton
                        android:id="@+id/img_checkhang"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/img_group314_teal_800_74x426"
                        android:layout_marginStart="300dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ua1"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/ua1" />
                </FrameLayout>
            </androidx.appcompat.widget.Toolbar>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageGroup314"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_rectangle215" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:id="@+id/bt_sanpham"
                    android:layout_weight="1"
                    android:layout_margin="-2dp"
                    android:text="Sản Phẩm"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:background="@drawable/button_trang"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:id="@+id/bt_danhmuc"
                    android:layout_margin="-2dp"
                    android:layout_weight="1"
                    android:text="Danh Muc"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:background="@drawable/button_trang"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:id="@+id/bt_Deals"
                    android:layout_weight="1"
                    android:layout_margin="-2dp"
                    android:text="Deals"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:background="@drawable/button_trang"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/bt_button2"
                    android:layout_weight="1"
                    android:layout_margin="-2dp"
                    android:text="Mới Nhất"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:background="@drawable/button_trang"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/bt_button3"
                    android:layout_weight="1"
                    android:layout_margin="-2dp"
                    android:text="Bán Chạy "
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:background="@drawable/button_trang"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/bt_sapxep"
                    android:layout_weight="1"
                    android:layout_margin="-2dp"
                    android:text="Giá"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:background="@drawable/button_trang"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcy_data"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                </androidx.recyclerview.widget.RecyclerView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcy_sanpham"
                    android:layout_gravity="center"
                    android:layout_width="400dp"
                    android:layout_height="350dp"
                    android:padding="5dp"
                    android:layout_marginTop="5dp">
            </androidx.recyclerview.widget.RecyclerView>
            </FrameLayout>
        </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:columnCount="5"
            android:rowCount="1"
            android:layout_gravity="center"
            android:background="@drawable/img_group314_teal_800_74x426">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/img_homesp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ua3"
                    android:scaleType="centerInside" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/image_feed_sp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ua5"
                    android:scaleType="centerInside" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mat hang"
                    android:textSize="10dp"
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/image_search_sp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ua4"
                    android:scaleType="centerInside" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:layout_marginTop="3dp"
                    android:textSize="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/image_giohang_sp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ua1"
                    android:layout_marginTop="5dp"
                    android:contentDescription="Hình ảnh sua tam"
                    android:scaleType="centerInside" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giỏ Hàng"
                    android:layout_marginTop="3dp"
                    android:textSize="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/image_tk_sp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ua2"
                    android:scaleType="centerInside" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài Khoản"
                    android:layout_marginTop="3dp"
                    android:textSize="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</RelativeLayout>
